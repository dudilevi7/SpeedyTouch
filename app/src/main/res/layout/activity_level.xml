<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/speedybackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        android:src="@drawable/speedytouchlogo"
        android:id="@+id/logolevel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_level"
        android:textSize="30sp"
        android:textColor="@color/White"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/option_level"
        android:layout_below="@+id/logolevel"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option_level"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/Level_1"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:id="@+id/level_1"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:background="@drawable/btns_shape"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/Level_2"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/level_1"
        android:id="@+id/level_2"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:background="@drawable/btns_shape"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_2"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/Level_3"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:id="@+id/level_3"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:background="@drawable/btns_shape"/>

</RelativeLayout>